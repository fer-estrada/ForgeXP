generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  username String @unique
  password String
  isAdmin Boolean @default(false)
  fName String?
  lName String?
  reviews Review[]
}

model Game {
  id Int @id @default(autoincrement())
  extertalId Int
  name String
  cover String
  summary String
  AvgRating Int
  reviews Review[]
  popularity Float
}

model Review {
  id Int @id @default(autoincrement())
  title String
  body String
  AvgRating Int
  userId Int
  user User @relation(fields: [userId], references: [id])
  gameId Int
  game Game @relation(fields: [gameId], references: [id])
}
